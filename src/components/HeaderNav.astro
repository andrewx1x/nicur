---
import Container from "./Container.astro";
import { navigation } from "../config/navigation";
const { currentPath = "/" } = Astro.props;
const isActive = (href) =>
  href === "/" ? currentPath === "/" : currentPath.startsWith(href);
---
<header class="navbar">
  <Container>
    <div class="navbar-inner">
      <a class="brand" href="/">Национальный исследовательский центр устойчивого развития</a>
      <nav class="nav-links" aria-label="Главная навигация">
        {navigation.map((item) => (
          <a
            class={`nav-link ${isActive(item.href) ? "is-active" : ""}`}
            href={item.href}
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
  </Container>
</header>
